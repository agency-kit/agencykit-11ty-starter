---
pagination:
  data: collections.combined
  size: 1
  alias: page
permalink: '{{page.path}}/'
---

{% if page.content.html %}
  {{ page.content.html | safe if page.content.html else "page content not found" }}
{% endif %}

<small>{{page.name}}</small>

<ul>
  {% for item in collections[page.slug] %}
  <li>
    <a href="{{item.path}}">{{item.name}}</a>
  </li>
{% endfor %}
</ul>

<small>menu</small>
<ul>
  {% for item in collections.nav %}
  <li>
    <a href="{{item.path}}">{{item.name}}</a>
  </li>
{% endfor %}
</ul>

